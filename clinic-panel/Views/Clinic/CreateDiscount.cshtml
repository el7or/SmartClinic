@model clinic_panel.DTOs.ClinicCreateDiscountDTO

@{
    ViewBag.Title = "CreateDiscount";
}

<h2>إضافة خصم لعيادة: @ViewBag.ClinicName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ClinicId)

    <div class="form-group">
        <label class="control-label col-md-2">اسم الخصم</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">مقدار الخصم</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } }) 
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">نوع الخصم</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.RadioButtonFor(model => model.IsPercent, false, new { @checked = true }) مبلغ &nbsp;
                @Html.RadioButtonFor(model => model.IsPercent, true) نسبة
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("رجوع", "Prices", new { id = Model.ClinicId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
