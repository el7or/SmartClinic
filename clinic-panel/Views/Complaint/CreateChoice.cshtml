@model clinic_panel.DTOs.ComplaintCreateChoiceDTO

@{
    ViewBag.Title = "CreateChoiceComplaint";
}

<h2>إضافة خيار للشكوى التفصيلية: @ViewBag.ComplaintName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DoctorId)
    @Html.HiddenFor(model => model.DetailedComplaintId)

    <div class="form-group">
        <label class="control-label col-md-2">الخيار:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Choice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Choice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("رجوع", "DoctorComplaints", new { id = Model.DoctorId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


