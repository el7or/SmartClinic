@model clinic_panel.DTOs.DiagnosisDoctorDTO

@{
    ViewBag.Title = "DoctorDiagnosis";
}

<h1>قائمة التشخيصات للطبيب: @ViewBag.DoctorName</h1>

<div class="row">
    <div class="col-md-6">
        <h2>أنواع التشخيصات</h2>

        <p>
            @Html.ActionLink("إضافة تشخيص", "CreateDoctorDiagnosis", new { id = Model.DoctorId })
        </p>

        <table class="table">
            <tr class="info">
                <th>
                    التشخيص
                </th>
            </tr>

            @foreach (var item in Model.DiagnosisNames)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diagnosis)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    @Html.ActionLink("رجوع", "Index", "Doctor")
</div>

