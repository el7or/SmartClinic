@model clinic_panel.DTOs.DoctorAddClinicDTO

@{
    ViewBag.Title = "Create";
}

<h2>إضافة الطبيب لعيادة أخرى: @ViewBag.DoctorName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DoctorId)

    <div class="form-group">
        <label class="control-label col-md-2">اختيار عيادة أخرى</label>
        <div class="col-md-10">
            @Html.DropDownList("ClinicId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ClinicId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("إلغاء", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
