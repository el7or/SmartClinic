@model clinic_panel.DTOs.DoctorAddPaymentDTO

@{
    ViewBag.Title = "إضافة دفع";
}

<h2>إضافة دفع لحساب اشتراك الدكتور: @ViewBag.DoctorName</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SubscriptionId)

    <div class="form-group">
        <label class="control-label col-md-2">المبلغ المطلوب</label>
        <div class="col-md-10 form-inline">
            @Html.EditorFor(model => model.Due, new { htmlAttributes = new { @class = "form-control", @readonly="@readonly" } }) ج.م
            @Html.ValidationMessageFor(model => model.Due, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">المبلغ المدفوع</label>
        <div class="col-md-10 form-inline">
            @Html.EditorFor(model => model.Paid, new { htmlAttributes = new { @class = "form-control" } }) ج.م
            @Html.ValidationMessageFor(model => model.Paid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">تاريخ دفع المتبقي</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NextPaymentDate, new { htmlAttributes = new { @type = "text", @class = "form-control datepicker", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.NextPaymentDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">ملاحظات على الدفع</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("رجوع", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
        $(function () {
            // initial Datepickers
            $.datepicker.setDefaults($.datepicker.regional['ar']);
            $('#NextPaymentDate').datepicker({
                dateFormat: "yy/mm/dd",
                changeMonth: true,
                changeYear: true,
                minDate: new Date()
            });
        });
</script>
}
