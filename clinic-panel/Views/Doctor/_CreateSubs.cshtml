@model clinic_panel.DTOs.DoctorCreateSubsDTO

@using (Html.BeginForm("CreateSubs", "Doctor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.DoctorId)

        <div class="form-group">
            <label class="control-label col-md-2">باقة الاشتراك</label>
            <div class="col-md-10">
                @Html.DropDownList("PlanId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PlanId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">ملاحظات على الاشتراك</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.SubsNote, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubsNote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">المبلغ المطلوب</label>
            <div class="col-md-10  form-inline">
                @Html.EditorFor(model => model.SignUpFee, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) ج.م
                @Html.ValidationMessageFor(model => model.SignUpFee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">المبلغ المدفوع</label>
            <div class="col-md-10  form-inline">
                @Html.EditorFor(model => model.Paid, new { htmlAttributes = new { @class = "form-control" } }) ج.م
                @Html.ValidationMessageFor(model => model.Paid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">تاريخ دفع المتبقي</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NextPaymentDate, new { htmlAttributes = new { @type = "text", @class = "form-control datepicker", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.NextPaymentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">ملاحظات على الدفع</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.PayNote, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PayNote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ واستمرار" class="btn btn-default" />
            </div>
        </div>
    </div>
}
