@{
    ViewBag.Title = "الرئيسية";
}

<div class="row text-center">
    <div class="col-md-4">
        <h2>عدد الأطباء المشتركين</h2>
        <p>@ViewBag.DoctorsCount</p>
        <p>@Html.ActionLink("بيانات الأطباء »", "Index", "Home",new { @class="btn btn-primary" })</p>
    </div>
    <div class="col-md-4">
        <h2>عدد عيادات الأطباء</h2>
