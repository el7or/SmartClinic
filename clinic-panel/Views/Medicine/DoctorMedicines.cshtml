@model clinic_panel.DTOs.MedicinesDoctorDTO

@{
    ViewBag.Title = "DoctorMedicines";
}

<h2>أدوية الطبيب: @ViewBag.DoctorName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DoctorId)

        <label class="control-label">اختيارات الأدوية:</label>
        <div class="row">
            <div class="col-md-12 table-bordered">
                @Html.CheckBox("CheckAll", false, new { id = "select_all" }) تحديد/إلغاء الكل
            </div>
            <hr />
            @for (int i = 0; i < Model.Medicines.Count; i++)
            {
                <div class="col-md-3 col-sm-6">
                    @Html.CheckBoxFor(m => Model.Medicines[i].IsChecked, new { @class = "m-0 med" })
                    <span>&nbsp;</span>
                    @Model.Medicines[i].Text
                    @Html.HiddenFor(m => Model.Medicines[i].Id)
                    @Html.HiddenFor(m => Model.Medicines[i].Text)
                    <br />
                </div>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-success" />&nbsp;
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع", "Index", "Doctor")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            $('#select_all').click(function () {
                $('.med').prop('checked', this.checked)
            });
        });
    </script>
}
