@model IEnumerable<clinic_panel.DTOs.PharmacyIndexDTO>

@{
    ViewBag.Title = "Index";
}

<h2>الصيدليات</h2>

<p>
    @Html.ActionLink("إضافة صيدلية", "Create")
</p>

<table class="table table-bordered table-striped">
    <tr class="info">
        <th>
            اسم الصيدلية
        </th>
        <th>
            اسم الصيدلي
        </th>
        <th>
            رقم الهاتف
        </th>
        <th>
            باقة الاشتراك
        </th>
        <th>
            بداية أول اشتراك
        </th>
        <th>
            نهاية آخر اشتراك
        </th>
        <th>
            عدد شهور الاشتراكات
        </th>
        <th>
            مبالغ الاشتراكات
        </th>
        <th>
            التفعيل
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PharmacyName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PharmacistName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Plan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartSubscriptionDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndSubscriptionDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SubscriptionsCount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SubscriptionsPaid) ج.م
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsActive)
    </td>
    <td>
        @Html.ActionLink("التفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("تجديد الاشتراك", "Renew", new { id = item.Id }, new { @class = "btn btn-success" })
    </td>
</tr>
    }

</table>
