@model clinic_panel.DTOs.RayDoctorDTO

@{
    ViewBag.Title = "DoctorRays";
}

<h1>قائمة الأشعة للطبيب: @ViewBag.DoctorName</h1>

<div class="row">
    <div class="col-md-6">
        <h2>أنواع الأشعة</h2>

        <p>
            @Html.ActionLink("إضافة نوع أشعة", "CreateRayName", new { id = Model.DoctorId })
        </p>

        <table class="table">
            <tr class="info">
                <th>
                    نوع الأشعة
                </th>
            </tr>

            @foreach (var item in Model.RayNames)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h2>أماكن الأشعة</h2>

        <p>
            @Html.ActionLink("إضافة مكان أشعة", "CreateRayArea", new { id = Model.DoctorId })
        </p>

        <table class="table">
            <tr class="info">
                <th>
                    مكان الأشعة
                </th>
            </tr>

            @foreach (var item in Model.RayAreas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    @Html.ActionLink("رجوع", "Index", "Doctor")
</div>

